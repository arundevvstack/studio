rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * MEDIA PRODUCTION PROJECT MANAGEMENT - REFACTORED RULES
     * Standardizing on isRootAdmin() for global portfolio clearance.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the user is the primary studio owner.
     * Hardcoded UIDs/Emails are the root of the security tree.
     */
    function isRootAdmin() {
      return isSignedIn() && (
        request.auth.uid == "3EQSAs91zzVclLcZYk2dzQToMeC3" ||
        request.auth.token.email == "arundevv.com@gmail.com"
      );
    }

    match /teamMembers/{teamMemberId} {
      // Split list/get to ensure admin path is clear to rules engine
      allow get: if isSignedIn() && (request.auth.uid == teamMemberId || isRootAdmin());
      allow list: if isRootAdmin();
      
      allow create: if isSignedIn() && request.auth.uid == teamMemberId;
      allow update: if isSignedIn() && (request.auth.uid == teamMemberId || isRootAdmin());
      allow delete: if isRootAdmin();
    }

    match /app_roles_admin/{teamMemberId} {
      allow read: if isSignedIn() && (request.auth.uid == teamMemberId || isRootAdmin());
      allow write: if false; 
    }

    match /projects/{projectId} {
      // Split list/get to avoid filtering constraints for admins
      allow list: if isRootAdmin();
      allow list: if isSignedIn() && request.auth.uid in resource.data.assignedTeamMemberIds;
      
      allow get: if isRootAdmin();
      allow get: if isSignedIn() && request.auth.uid in resource.data.assignedTeamMemberIds;
      
      allow create: if isSignedIn() && (isRootAdmin() || request.auth.uid in request.resource.data.assignedTeamMemberIds);
      allow update: if isRootAdmin() || (isSignedIn() && request.auth.uid in resource.data.assignedTeamMemberIds);
      allow delete: if isRootAdmin();

      // Project sub-resources
      match /notes/{noteId} {
        allow read: if isRootAdmin() || (isSignedIn() && request.auth.uid in resource.data.projectAssignedTeamMemberIds);
        allow write: if isRootAdmin() || (isSignedIn() && request.auth.uid in resource.data.projectAssignedTeamMemberIds);
      }

      match /tasks/{taskId} {
        allow read: if isRootAdmin() || (isSignedIn() && request.auth.uid in resource.data.projectAssignedTeamMemberIds);
        allow write: if isRootAdmin() || (isSignedIn() && request.auth.uid in resource.data.projectAssignedTeamMemberIds);
      }

      match /timelineEvents/{timelineEventId} {
        allow read: if isRootAdmin() || (isSignedIn() && request.auth.uid in resource.data.projectAssignedTeamMemberIds);
        allow write: if isRootAdmin() || (isSignedIn() && request.auth.uid in resource.data.projectAssignedTeamMemberIds);
      }
    }

    match /tags/{tagId} {
      allow read: if isSignedIn();
      allow write: if isRootAdmin();
    }
  }
}
