rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * MEDIA PRODUCTION PROJECT MANAGEMENT - SECURITY RULES
     * 
     * CORE PHILOSOPHY:
     * This ruleset implements a robust, collaboration-first security model designed for media production. 
     * It prioritizes "Authorization Independence" by leveraging denormalized data to ensure that 
     * security checks are performant and do not require expensive cross-document lookups.
     * 
     * DATA STRUCTURE:
     * - /teamMembers/{userId}: Private user profiles secured by UID ownership.
     * - /app_roles_admin/{userId}: A DBAC (Database-Backed Access Control) collection where the existence 
     *   of a document grants global administrative privileges.
     * - /projects/{projectId}: Top-level collaborative entities. Access is controlled by an 
     *   `assignedTeamMemberIds` array on each project document.
     * - /projects/{projectId}/[subcollections]: Notes, Tasks, and Events are secured via a denormalized 
     *   `projectAssignedTeamMemberIds` field, allowing sub-resource rules to remain independent of the parent.
     * - /tags/{tagId}: Global categorization tags accessible to all authenticated users but managed by admins.
     * 
     * KEY SECURITY DECISIONS:
     * 1. Denormalization for Authorization: Project membership is copied from projects into all sub-resources 
     *    (Notes, Tasks, TimelineEvents) to allow for secure list queries and O(1) rule evaluation.
     * 2. DBAC for Admins: Administrative roles are verified by checking the /app_roles_admin collection.
     * 3. Prototyping Flexibility: Rules strictly enforce WHO can access data based on identity and 
     *    relationships but remain flexible on the specific schema (types/optional fields) of the content.
     */

    // --- Global Helper Functions ---

    /** Checks if the request is from an authenticated user. */
    function isSignedIn() {
      return request.auth != null;
    }

    /** Checks if the user is the owner of a specific resource based on a UID. */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /** Checks if the user has a global admin role via the DBAC collection. */
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/app_roles_admin/$(request.auth.uid));
    }

    /** Checks if the user is a member of a project based on the provided data map. */
    function isProjectMember(data) {
      return isSignedIn() && (request.auth.uid in data.assignedTeamMemberIds);
    }

    /** Checks if the user is a member of a project via denormalized sub-resource data. */
    function isSubResourceMember(data) {
      return isSignedIn() && (request.auth.uid in data.projectAssignedTeamMemberIds);
    }

    // --- Collection Rules ---

    /**
     * @description Rules for user profiles. Users manage their own profiles.
     * @path /teamMembers/{teamMemberId}
     * @allow (get) If the user is the owner or an admin.
     * @deny (update) If the user attempts to change another user's profile.
     * @principle Path-based ownership for private user data.
     */
    match /teamMembers/{teamMemberId} {
      allow get: if isOwner(teamMemberId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(teamMemberId) && request.resource.data.id == teamMemberId;
      allow update: if (isOwner(teamMemberId) || isAdmin()) && resource != null && request.resource.data.id == resource.data.id;
      allow delete: if (isOwner(teamMemberId) || isAdmin()) && resource != null;
    }

    /**
     * @description DBAC collection for global admins. Managed externally/manually.
     * @path /app_roles_admin/{teamMemberId}
     * @allow (get) If the user is an admin.
     * @deny (write) Any user-initiated writes (managed by system/admin).
     * @principle Structural segregation of sensitive role data.
     */
    match /app_roles_admin/{teamMemberId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create, update, delete: if false; 
    }

    /**
     * @description Collaborative project documents. Access granted to assigned team members.
     * @path /projects/{projectId}
     * @allow (create) If the user is authenticated and includes themselves in the members list.
     * @deny (read) If the user is not in the assignedTeamMemberIds array.
     * @principle Shared access via membership arrays (QAP pattern).
     */
    match /projects/{projectId} {
      allow get, list: if isAdmin() || isProjectMember(resource.data);
      allow create: if isSignedIn() && request.resource.data.id == projectId && (request.auth.uid in request.resource.data.assignedTeamMemberIds);
      allow update: if (isAdmin() || isProjectMember(resource.data)) && resource != null && request.resource.data.id == resource.data.id;
      allow delete: if isAdmin() || (resource != null && isProjectMember(resource.data));

      /**
       * @description Sub-resource: Notes. Secured via denormalized project membership.
       * @path /projects/{projectId}/notes/{noteId}
       * @principle Authorization Independence through data denormalization.
       */
      match /notes/{noteId} {
        allow get, list: if isAdmin() || isSubResourceMember(resource.data);
        allow create: if (isAdmin() || (isSignedIn() && request.auth.uid in request.resource.data.projectAssignedTeamMemberIds)) && request.resource.data.id == noteId && request.resource.data.projectId == projectId;
        allow update: if (isAdmin() || isSubResourceMember(resource.data)) && resource != null && request.resource.data.id == resource.data.id && request.resource.data.projectId == resource.data.projectId;
        allow delete: if isAdmin() || (resource != null && isSubResourceMember(resource.data));
      }

      /**
       * @description Sub-resource: Tasks. Secured via denormalized project membership.
       * @path /projects/{projectId}/tasks/{taskId}
       * @principle Authorization Independence through data denormalization.
       */
      match /tasks/{taskId} {
        allow get, list: if isAdmin() || isSubResourceMember(resource.data);
        allow create: if (isAdmin() || (isSignedIn() && request.auth.uid in request.resource.data.projectAssignedTeamMemberIds)) && request.resource.data.id == taskId && request.resource.data.projectId == projectId;
        allow update: if (isAdmin() || isSubResourceMember(resource.data)) && resource != null && request.resource.data.id == resource.data.id && request.resource.data.projectId == resource.data.projectId;
        allow delete: if isAdmin() || (resource != null && isSubResourceMember(resource.data));
      }

      /**
       * @description Sub-resource: TimelineEvents. Secured via denormalized project membership.
       * @path /projects/{projectId}/timelineEvents/{timelineEventId}
       * @principle Authorization Independence through data denormalization.
       */
      match /timelineEvents/{timelineEventId} {
        allow get, list: if isAdmin() || isSubResourceMember(resource.data);
        allow create: if (isAdmin() || (isSignedIn() && request.auth.uid in request.resource.data.projectAssignedTeamMemberIds)) && request.resource.data.id == timelineEventId && request.resource.data.projectId == projectId;
        allow update: if (isAdmin() || isSubResourceMember(resource.data)) && resource != null && request.resource.data.id == resource.data.id && request.resource.data.projectId == resource.data.projectId;
        allow delete: if isAdmin() || (resource != null && isSubResourceMember(resource.data));
      }
    }

    /**
     * @description Global tags for project categorization.
     * @path /tags/{tagId}
     * @allow (read) All authenticated users.
     * @allow (write) Restricted to global administrators.
     * @principle Public authenticated read with privileged write access.
     */
    match /tags/{tagId} {
      allow get, list: if isSignedIn();
      allow create: if isAdmin() && request.resource.data.id == tagId;
      allow update: if isAdmin() && resource != null && request.resource.data.id == resource.data.id;
      allow delete: if isAdmin() && resource != null;
    }
  }
}