rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * MEDIA PRODUCTION PROJECT MANAGEMENT - SECURITY RULES
     * 
     * Robust, performance-first security model.
     * Prioritizes "isRootAdmin" for global studio access.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the user is a hardcoded root administrator.
     * This is the source of truth for administrative access.
     */
    function isRootAdmin() {
      return isSignedIn() && (
        request.auth.uid == "3EQSAs91zzVclLcZYk2dzQToMeC3" ||
        request.auth.token.email == "arundevv.com@gmail.com"
      );
    }

    match /teamMembers/{teamMemberId} {
      allow get: if isSignedIn() && (request.auth.uid == teamMemberId || isRootAdmin());
      allow list: if isRootAdmin();
      allow create: if isSignedIn() && request.auth.uid == teamMemberId;
      allow update: if isSignedIn() && (request.auth.uid == teamMemberId || isRootAdmin());
      allow delete: if isRootAdmin();
    }

    match /app_roles_admin/{teamMemberId} {
      allow read: if isSignedIn() && (request.auth.uid == teamMemberId || isRootAdmin());
      allow write: if false; 
    }

    match /projects/{projectId} {
      // List/Get: Root Admins or assigned members
      allow list, get: if isRootAdmin() || (isSignedIn() && request.auth.uid in resource.data.assignedTeamMemberIds);
      
      // Mutations
      allow create: if isSignedIn() && (isRootAdmin() || request.auth.uid in request.resource.data.assignedTeamMemberIds);
      allow update: if isRootAdmin() || (isSignedIn() && request.auth.uid in resource.data.assignedTeamMemberIds);
      allow delete: if isRootAdmin();

      // Denormalized sub-resources
      match /notes/{noteId} {
        allow read, write: if isRootAdmin() || (isSignedIn() && request.auth.uid in resource.data.projectAssignedTeamMemberIds);
      }

      match /tasks/{taskId} {
        allow read, write: if isRootAdmin() || (isSignedIn() && request.auth.uid in resource.data.projectAssignedTeamMemberIds);
      }

      match /timelineEvents/{timelineEventId} {
        allow read, write: if isRootAdmin() || (isSignedIn() && request.auth.uid in resource.data.projectAssignedTeamMemberIds);
      }
    }

    match /tags/{tagId} {
      allow read: if isSignedIn();
      allow write: if isRootAdmin();
    }
  }
}