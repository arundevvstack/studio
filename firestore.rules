rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * MEDIA PRODUCTION PROJECT MANAGEMENT
     * Global administrative access for the primary studio owner.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    function isRootAdmin() {
      return isSignedIn() && (
        request.auth.uid == "3EQSAs91zzVclLcZYk2dzQToMeC3" ||
        request.auth.token.email == "arundevv.com@gmail.com"
      );
    }

    match /teamMembers/{teamMemberId} {
      allow get: if isSignedIn() && (request.auth.uid == teamMemberId || isRootAdmin());
      allow list: if isRootAdmin();
      allow create: if isSignedIn() && request.auth.uid == teamMemberId;
      allow update: if isSignedIn() && (request.auth.uid == teamMemberId || isRootAdmin());
      allow delete: if isRootAdmin();
    }

    match /app_roles_admin/{teamMemberId} {
      allow read: if isSignedIn() && (request.auth.uid == teamMemberId || isRootAdmin());
      allow write: if false; 
    }

    match /projects/{projectId} {
      // Split list and get to prevent rule-as-filter ambiguity
      allow list: if isRootAdmin() || (isSignedIn() && request.auth.uid in resource.data.assignedTeamMemberIds);
      allow get: if isRootAdmin() || (isSignedIn() && request.auth.uid in resource.data.assignedTeamMemberIds);
      
      allow create: if isSignedIn() && (isRootAdmin() || request.auth.uid in request.resource.data.assignedTeamMemberIds);
      allow update: if isRootAdmin() || (isSignedIn() && request.auth.uid in resource.data.assignedTeamMemberIds);
      allow delete: if isRootAdmin();

      // Nested sub-resources (notes, tasks, events)
      match /{allSubcollections=**} {
        allow read, write: if isRootAdmin() || (isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/projects/$(projectId)).data.assignedTeamMemberIds);
      }
    }

    match /tags/{tagId} {
      allow read: if isSignedIn();
      allow write: if isRootAdmin();
    }
  }
}