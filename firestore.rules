rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * MEDIA PRODUCTION PROJECT MANAGEMENT - SECURITY RULES
     * 
     * CORE PHILOSOPHY:
     * This ruleset implements a robust, collaboration-first security model.
     * It prioritizes "Authorization Independence" for performance and scalability.
     */

    // --- Global Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    /** 
     * Checks if the user has a global admin role.
     * Hardcoded UID and Email for immediate Root access.
     * We avoid calling exists() in a circular way.
     */
    function isAdmin() {
      return isSignedIn() && (
        request.auth.uid == "3EQSAs91zzVclLcZYk2dzQToMeC3" ||
        request.auth.token.email == "arundevv.com@gmail.com" ||
        exists(/databases/$(database)/documents/app_roles_admin/$(request.auth.uid))
      );
    }

    /** Checks if the user is a member of a project based on the provided data map. */
    function isProjectMember(data) {
      return isSignedIn() && (request.auth.uid in data.assignedTeamMemberIds);
    }

    /** Checks if the user is a member of a project via denormalized sub-resource data. */
    function isSubResourceMember(data) {
      return isSignedIn() && (request.auth.uid in data.projectAssignedTeamMemberIds);
    }

    // --- Collection Rules ---

    match /teamMembers/{teamMemberId} {
      allow get: if request.auth.uid == teamMemberId || isAdmin();
      allow list: if isAdmin();
      allow create: if request.auth.uid == teamMemberId;
      allow update: if request.auth.uid == teamMemberId || isAdmin();
      allow delete: if isAdmin();
    }

    match /app_roles_admin/{teamMemberId} {
      // Allow the user to check their own role, or admins to list all.
      allow read: if isSignedIn() && (request.auth.uid == teamMemberId || isAdmin());
      allow write: if false; 
    }

    match /projects/{projectId} {
      // Combined list rule to ensure Firestore rules engine evaluates OR correctly
      allow list: if isAdmin() || (isSignedIn() && (request.auth.uid in resource.data.assignedTeamMemberIds));
      
      allow get: if isAdmin() || isProjectMember(resource.data);
      
      allow create: if isSignedIn() && (isAdmin() || (request.auth.uid in request.resource.data.assignedTeamMemberIds));
      allow update: if isAdmin() || isProjectMember(resource.data);
      allow delete: if isAdmin() || isProjectMember(resource.data);

      match /notes/{noteId} {
        allow list: if isAdmin() || isSubResourceMember(resource.data);
        allow get: if isAdmin() || isSubResourceMember(resource.data);
        allow create, update, delete: if isAdmin() || isSubResourceMember(resource.data) || (isSignedIn() && request.auth.uid in request.resource.data.projectAssignedTeamMemberIds);
      }

      match /tasks/{taskId} {
        allow list: if isAdmin() || isSubResourceMember(resource.data);
        allow get: if isAdmin() || isSubResourceMember(resource.data);
        allow create, update, delete: if isAdmin() || isSubResourceMember(resource.data) || (isSignedIn() && request.auth.uid in request.resource.data.projectAssignedTeamMemberIds);
      }

      match /timelineEvents/{timelineEventId} {
        allow list: if isAdmin() || isSubResourceMember(resource.data);
        allow get: if isAdmin() || isSubResourceMember(resource.data);
        allow create, update, delete: if isAdmin() || isSubResourceMember(resource.data) || (isSignedIn() && request.auth.uid in request.resource.data.projectAssignedTeamMemberIds);
      }
    }

    match /tags/{tagId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}