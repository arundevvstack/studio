{
  "auth": {
    "providers": ["password"]
  },
  "entities": {
    "Project": {
      "title": "Project",
      "description": "A media production project.",
      "type": "object",
      "properties": {
        "projectName": { "type": "string" },
        "client": { "type": "string" },
        "stage": { "type": "string", "enum": ["Discussion", "Pre Production", "Production", "Post Production", "Released"] },
        "priority": { "type": "string", "enum": ["Low", "Medium", "High"] },
        "budget": { "type": "number" },
        "progress": { "type": "number" },
        "description": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["projectName", "client"]
    }
  },
  "firestore": {
    "/projects/{projectId}": {
      "schema": "Project",
      "description": "Collection of workspace projects."
    }
  }
}
